<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Portatil">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAntMovil7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/Green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        app:srcCompat="@drawable/flechaizq" />

    <ImageView
        android:id="@+id/ivMovil2Logo7"
        android:layout_width="601dp"
        android:layout_height="598dp"
        android:alpha="0.30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hmlogo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSigMovil2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/Green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        app:srcCompat="@drawable/flechadere" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/lyDimensiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/etLargoPantalla"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Largo"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="cm"
                android:textSize="20sp"
                android:translationY="11dp" />

            <EditText
                android:id="@+id/etAnchoPantalla"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Ancho"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="cm"
                android:textSize="20sp"
                android:translationY="11dp" />

            <EditText
                android:id="@+id/etAltoPantalla"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Alto"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="cm"
                android:textSize="20sp"
                android:translationY="11dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/etProcesador"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="75"
                android:ems="10"
                android:hint="Procesador"
                android:inputType="text" />

            <TextView
                android:id="@+id/separador2"
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/etPulgadas"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:ems="10"
                android:hint="Pulgadas"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="in."
                android:textSize="20sp"
                android:translationY="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/etGrafica"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="75"
                android:ems="10"
                android:hint="Grafica"
                android:inputType="text" />

            <TextView
                android:id="@+id/separador7"
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/etRam"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:ems="10"
                android:hint="RAM"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Gb"
                android:textSize="20sp"
                android:translationY="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <Spinner
                android:id="@+id/spConectividad"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="48"
                android:background="@drawable/spinner_background"
                android:entries="@array/Alimentacion" />

            <TextView
                android:id="@+id/separador3"
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@+id/spSO"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="48"
                android:background="@drawable/spinner_background"
                android:entries="@array/SO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <Spinner
                android:id="@+id/spIdioma"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="48"
                android:background="@drawable/spinner_background"
                android:entries="@array/Idioma" />

            <TextView
                android:id="@+id/separador9"
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@+id/spTipoPantalla"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="48"
                android:background="@drawable/spinner_background"
                android:entries="@array/TiposPantalla" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="80dp"
            android:paddingTop="5dp"
            android:paddingRight="80dp"
            android:paddingBottom="5dp">

            <Spinner
                android:id="@+id/spConexion"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="50"
                android:background="@drawable/spinner_background"
                android:entries="@array/Resolucion" />

            <TextView
                android:id="@+id/separador12"
                android:layout_width="10dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/etAlimentacionPort"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:ems="10"
                android:hint="Alimentacion"
                android:inputType="text" />

            <TextView
                android:id="@+id/separador0"
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/etVoltaje"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:ems="10"
                android:hint="Voltaje"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textViewV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V"
                android:textSize="20sp"
                android:translationY="11dp" />

            <EditText
                android:id="@+id/etIntensidad"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:ems="10"
                android:hint="Intensidad"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textViewV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="20sp"
                android:translationY="11dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/etAlmacenamiento2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Almacenamiento"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/tvEnumPuertos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Introduce el numero de Puertos de la CPU:"
            android:textAlignment="center"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/uds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VGA:    "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etVGA"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Unidades"
                android:inputType="number"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#040404"
                android:textColorLink="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uds2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HDMI: "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etHDMI"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Unidades"
                android:inputType="number"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#040404"
                android:textColorLink="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uds4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DVI:     "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etDVI"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Unidades"
                android:inputType="number"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#040404"
                android:textColorLink="#000000" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uds3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USB:    "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etUSB"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Unidades"
                android:inputType="number"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#040404"
                android:textColorLink="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uds5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DP:      "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etDP"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Unidades"
                android:inputType="number"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#040404"
                android:textColorLink="#000000" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/cbDVD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DVDR" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>