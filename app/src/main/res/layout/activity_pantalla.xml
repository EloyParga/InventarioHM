<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pantalla">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hmlogo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAntMovil4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/Green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        app:srcCompat="@drawable/flechaizq" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSigMovil3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/Green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        app:srcCompat="@drawable/flechadere" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingTop="200dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/lyDimensiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <EditText
                android:id="@+id/etLargoPantalla"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Largo"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="cm"
                android:textSize="20sp"
                android:translationY="11dp" />

            <EditText
                android:id="@+id/etAnchoPantalla"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Ancho"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="cm"
                android:textSize="20sp"
                android:translationY="11dp" />

            <EditText
                android:id="@+id/etAltoPantalla"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Alto"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="cm"
                android:textSize="20sp"
                android:translationY="11dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <Spinner
                android:id="@+id/spConexion"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="50"
                android:background="@drawable/spinner_background"
                android:entries="@array/Resolucion" />

            <TextView
                android:id="@+id/separador2"
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/etPulgadas"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:ems="10"
                android:hint="Pulgadas"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="in."
                android:textSize="20sp"
                android:translationY="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <Spinner
                android:id="@+id/spConectividad"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="48"
                android:background="@drawable/spinner_background"
                android:entries="@array/Alimentacion" />

            <TextView
                android:id="@+id/separador3"
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@+id/spIdioma"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="48"
                android:background="@drawable/spinner_background"
                android:entries="@array/TiposPantalla" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEnumPuertos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:paddingTop="40dp"
            android:paddingRight="60dp"
            android:text="Introduce el numero de Puertos del Monitor:"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/uds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VGA:    "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etVGA"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Unidades"
                android:inputType="number"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#040404"
                android:textColorLink="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uds2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HDMI: "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etHDMI"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Unidades"
                android:inputType="number"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#040404"
                android:textColorLink="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uds3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USB:    "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etUSB"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Unidades"
                android:inputType="number"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#040404"
                android:textColorLink="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uds4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DVI:     "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etDVI"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Unidades"
                android:inputType="number"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#040404"
                android:textColorLink="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uds5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DP:      "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etDP"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Unidades"
                android:inputType="number"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#040404"
                android:textColorLink="#000000" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>